<div id="evoCalendar"></div>
<div id="app"></div>

{% if 'facility' in user.getroles(TRUE)  %}
  <div class="modal fade" id="addShiftModal" tabindex="-1" role="dialog" aria-labelledby="addShiftModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="addshiftModalLabel">Add Shift</h3>
        </div>
        <div class="modal-body">
          <p>Select a type.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-success add-shift shift-type-event" data-shift-type="event"><span class="icon glyphicon glyphicon-plus" aria-hidden="true"></span> Morning</button>
          <button type="button" class="btn btn-success add-shift shift-type-holiday" data-shift-type="holiday"><span class="icon glyphicon glyphicon-plus" aria-hidden="true"></span> Evening</button>
          <button type="button" class="btn btn-success add-shift shift-type-birthday" data-shift-type="birthday"><span class="icon glyphicon glyphicon-plus" aria-hidden="true"></span> Night</button>
        </div>
        <div class="modal-footer">
          <div class="modal-alerts"></div>
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
{% else %}
  <div class="modal fade" id="shiftActionModal" tabindex="-1" role="dialog" aria-labelledby="shiftActionModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="shiftActionModalLabel">Apply</h3>
        </div>
        <div class="modal-body text-right">
          Click to apply for this shift.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-success"><span class="icon glyphicon glyphicon-ok" aria-hidden="true"></span> Apply</button>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="editShiftModal" tabindex="-1" role="dialog" aria-labelledby="editShiftModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="editShiftModalLabel">Edit Shift</h3>
        </div>
        <div class="modal-body text-right">
          Click below to cancel this shift.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger remove-shift"><span class="icon glyphicon glyphicon-remove" aria-hidden="true"></span> Cancel</button>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
{% endif %}
